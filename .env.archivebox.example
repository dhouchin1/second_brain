# ArchiveBox Integration Configuration
# Copy to .env and customize for your deployment

# === ARCHIVEBOX CORE SETTINGS ===

# Enable ArchiveBox integration (requires feature flag)
ARCHIVEBOX_ENABLED=false
ARCHIVEBOX_FEATURE_FLAG=false

# ArchiveBox data directory (where archives are stored)
ARCHIVEBOX_DATA_DIR=./archivebox_data

# Docker image for ArchiveBox (if using Docker deployment)
ARCHIVEBOX_DOCKER_IMAGE=archivebox/archivebox:latest

# === ARCHIVAL SETTINGS ===

# Default timeout for archive operations (seconds)
ARCHIVEBOX_TIMEOUT=60

# Only archive new URLs (skip existing)
ARCHIVEBOX_ONLY_NEW=true

# Default extract types (comma-separated)
# Available: title,favicon,wget,pdf,screenshot,dom,singlefile,readability,mercury,htmltotext,git,media,archive_dot_org
ARCHIVEBOX_EXTRACT=title,favicon,wget,pdf,screenshot,dom,singlefile

# Chrome/Chromium binary path (optional, auto-detected if not set)
# ARCHIVEBOX_CHROME_BINARY=/usr/bin/chromium-browser

# Screenshot resolution (width,height)
ARCHIVEBOX_RESOLUTION=1440,2000

# === STORAGE STRATEGY ===

# Storage strategy: symlink (efficient) or copy (portable)
ARCHIVEBOX_STORAGE_STRATEGY=symlink

# Auto-cleanup old archives (days, 0 = disabled)
ARCHIVEBOX_AUTO_CLEANUP_DAYS=365

# Maximum archive size per URL (MB, 0 = unlimited)
ARCHIVEBOX_MAX_SIZE_MB=500

# === DOCKER SETTINGS (for docker-compose.archivebox.yml) ===

# ArchiveBox admin password
ARCHIVEBOX_PASSWORD=changeme-secure-password

# ArchiveBox secret key
ARCHIVEBOX_SECRET_KEY=changeme-secure-secret-key

# === DEVELOPMENT SETTINGS ===

# Enable for development/testing
# ARCHIVEBOX_ENABLED=true
# ARCHIVEBOX_FEATURE_FLAG=true

# Use smaller timeout for testing
# ARCHIVEBOX_TIMEOUT=30

# Enable only essential extractors for faster testing
# ARCHIVEBOX_EXTRACT=title,screenshot,pdf