# Second Brain - Production Environment Configuration
# Copy to production.env and fill in actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment and deployment settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# Domain and URL configuration
DOMAIN_NAME=secondbrain.example.com
BASE_URL=https://secondbrain.example.com
ALLOWED_HOSTS=secondbrain.example.com,www.secondbrain.example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database (SQLite for simple deployments, PostgreSQL for production)
DATABASE_URL=sqlite:///var/www/secondbrain/data/notes.db
# DATABASE_URL=postgresql://secondbrain:password@localhost:5432/secondbrain

# Database connection settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# CACHE AND MESSAGE BROKER
# =============================================================================

# Redis configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-if-using-auth

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=300

# =============================================================================
# FILE STORAGE AND PATHS
# =============================================================================

# Application directories
VAULT_PATH=/var/www/secondbrain/vault
AUDIO_DIR=/var/www/secondbrain/audio
UPLOAD_DIR=/var/www/secondbrain/uploads
STATIC_DIR=/var/www/secondbrain/static
LOG_DIR=/var/log/secondbrain

# File size limits (in bytes)
MAX_CONTENT_LENGTH=104857600  # 100MB
MAX_AUDIO_FILE_SIZE=52428800  # 50MB
MAX_UPLOAD_SIZE=104857600     # 100MB

# =============================================================================
# AI AND PROCESSING SERVICES
# =============================================================================

# Ollama configuration
OLLAMA_API_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=60
OLLAMA_MAX_TOKENS=2048

# Whisper.cpp configuration
WHISPER_CPP_PATH=/usr/local/bin/whisper
WHISPER_MODEL_PATH=/opt/models/ggml-base.en.bin
WHISPER_THREADS=4
WHISPER_LANGUAGE=en

# Audio processing
AUDIO_TRANSCRIPTION_ENABLED=true
AUDIO_QUEUE_MAX_SIZE=100
AUDIO_PROCESSING_TIMEOUT=300

# =============================================================================
# SEARCH AND EMBEDDINGS
# =============================================================================

# Search configuration
SEARCH_ENABLED=true
EMBEDDINGS_ENABLED=true
SQLITE_VEC_PATH=/usr/local/lib/sqlite-vec0.so
VECTOR_DIMENSIONS=384

# Search performance
SEARCH_RESULTS_LIMIT=50
SEARCH_TIMEOUT=10

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Discord bot configuration
DISCORD_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_ENABLED=false

# Apple Shortcuts configuration
APPLE_SHORTCUTS_ENABLED=true
APPLE_SHORTCUTS_SECRET=your-apple-shortcuts-secret-key

# Email configuration (for magic links)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT and authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Session configuration
SESSION_SECRET_KEY=your-session-secret-key
SESSION_EXPIRE_MINUTES=480  # 8 hours

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# CORS settings
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=https://secondbrain.example.com,https://www.secondbrain.example.com
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SSL AND ENCRYPTION
# =============================================================================

# Let's Encrypt configuration
LETSENCRYPT_EMAIL=your-email@example.com
SSL_ENABLED=true

# Security headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Application monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# Logging configuration
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_FILE_BACKUP_COUNT=5
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Sentry error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker and process configuration
GUNICORN_WORKERS=auto
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# Cache settings
CACHE_DEFAULT_TIMEOUT=300
CACHE_MAX_SIZE=1000

# Background job settings
BACKGROUND_JOBS_ENABLED=true
BACKGROUND_JOB_TIMEOUT=600

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Database backup settings
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION_DAYS=30
DATABASE_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# File cleanup settings
TEMP_FILE_CLEANUP_ENABLED=true
TEMP_FILE_MAX_AGE_HOURS=24
LOG_CLEANUP_ENABLED=true
LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Development features (should be false in production)
DEBUG_TOOLBAR=false
PROFILER_ENABLED=false
TEMPLATE_DEBUG=false

# Testing and validation
SKIP_AUTH=false
MOCK_EXTERNAL_APIS=false
VALIDATE_UPLOADS=true

# =============================================================================
# DOCKER AND CONTAINER SETTINGS
# =============================================================================

# Container-specific settings
POSTGRES_PASSWORD=your-postgres-password
GRAFANA_PASSWORD=your-grafana-admin-password
GRAFANA_USER=admin