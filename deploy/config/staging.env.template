# Second Brain - Staging Environment Configuration
# Copy to staging.env and fill in actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment and deployment settings
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=DEBUG
SECRET_KEY=staging-secret-key-change-this

# Domain and URL configuration
DOMAIN_NAME=staging.secondbrain.example.com
BASE_URL=https://staging.secondbrain.example.com
ALLOWED_HOSTS=staging.secondbrain.example.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database (SQLite for staging simplicity)
DATABASE_URL=sqlite:///var/www/secondbrain/data/staging_notes.db

# Database connection settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# CACHE AND MESSAGE BROKER
# =============================================================================

# Redis configuration
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=

# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=300

# =============================================================================
# FILE STORAGE AND PATHS
# =============================================================================

# Application directories
VAULT_PATH=/var/www/secondbrain/staging_vault
AUDIO_DIR=/var/www/secondbrain/staging_audio
UPLOAD_DIR=/var/www/secondbrain/staging_uploads
STATIC_DIR=/var/www/secondbrain/static
LOG_DIR=/var/log/secondbrain/staging

# File size limits (smaller for staging)
MAX_CONTENT_LENGTH=52428800   # 50MB
MAX_AUDIO_FILE_SIZE=26214400  # 25MB
MAX_UPLOAD_SIZE=52428800      # 50MB

# =============================================================================
# AI AND PROCESSING SERVICES
# =============================================================================

# Ollama configuration
OLLAMA_API_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=60
OLLAMA_MAX_TOKENS=1024

# Whisper.cpp configuration
WHISPER_CPP_PATH=/usr/local/bin/whisper
WHISPER_MODEL_PATH=/opt/models/ggml-base.en.bin
WHISPER_THREADS=2
WHISPER_LANGUAGE=en

# Audio processing
AUDIO_TRANSCRIPTION_ENABLED=true
AUDIO_QUEUE_MAX_SIZE=50
AUDIO_PROCESSING_TIMEOUT=300

# =============================================================================
# SEARCH AND EMBEDDINGS
# =============================================================================

# Search configuration
SEARCH_ENABLED=true
EMBEDDINGS_ENABLED=false  # Disabled for staging to save resources
SQLITE_VEC_PATH=/usr/local/lib/sqlite-vec0.so
VECTOR_DIMENSIONS=384

# Search performance
SEARCH_RESULTS_LIMIT=25
SEARCH_TIMEOUT=5

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Discord bot configuration (disabled in staging)
DISCORD_TOKEN=
DISCORD_GUILD_ID=
DISCORD_ENABLED=false

# Apple Shortcuts configuration
APPLE_SHORTCUTS_ENABLED=true
APPLE_SHORTCUTS_SECRET=staging-shortcuts-secret

# Email configuration (disabled in staging)
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT and authentication
JWT_SECRET_KEY=staging-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session configuration
SESSION_SECRET_KEY=staging-session-secret
SESSION_EXPIRE_MINUTES=240  # 4 hours

# Rate limiting (more relaxed for staging)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=40

# CORS settings (more permissive for testing)
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# SSL AND ENCRYPTION
# =============================================================================

# Let's Encrypt configuration
LETSENCRYPT_EMAIL=staging@example.com
SSL_ENABLED=true

# Security headers (less strict for staging)
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=false  # Disabled for easier testing
HSTS_ENABLED=false
HSTS_MAX_AGE=3600

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Application monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# Logging configuration (more verbose for staging)
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=5242880  # 5MB
LOG_FILE_BACKUP_COUNT=3
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# Sentry error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker and process configuration (fewer resources)
GUNICORN_WORKERS=2
GUNICORN_MAX_REQUESTS=500
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# Cache settings
CACHE_DEFAULT_TIMEOUT=60
CACHE_MAX_SIZE=500

# Background job settings
BACKGROUND_JOBS_ENABLED=true
BACKGROUND_JOB_TIMEOUT=300

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Database backup settings
DATABASE_BACKUP_ENABLED=false
DATABASE_BACKUP_RETENTION_DAYS=7
DATABASE_BACKUP_SCHEDULE="0 4 * * *"  # Daily at 4 AM

# File cleanup settings
TEMP_FILE_CLEANUP_ENABLED=true
TEMP_FILE_MAX_AGE_HOURS=12
LOG_CLEANUP_ENABLED=true
LOG_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Development features (can be enabled for staging testing)
DEBUG_TOOLBAR=false
PROFILER_ENABLED=false
TEMPLATE_DEBUG=false

# Testing and validation
SKIP_AUTH=false
MOCK_EXTERNAL_APIS=false
VALIDATE_UPLOADS=true

# =============================================================================
# DOCKER AND CONTAINER SETTINGS
# =============================================================================

# Container-specific settings
POSTGRES_PASSWORD=staging-postgres-password
GRAFANA_PASSWORD=staging-grafana-password
GRAFANA_USER=admin